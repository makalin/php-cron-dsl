{
    "name": "makalin/php-cron-dsl",
    "description": "Cron-expression compiler â†’ systemd timers. Generate native .timer / .service units from concise PHP array configs.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehmet T. AKALIN",
            "email": "mehmet@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "CronDSL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CronDSL\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/cron-dsl"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix --allow-risky=yes",
        "cs-check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}